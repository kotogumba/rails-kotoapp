<div class="container mb-3">
  <div class="gallery-header">
    <%= link_to client_path(@client), style: "text-decoration: none;" do %>
        <i class="fa-solid fa-angle-left back-btn"></i>
    <% end %>
    <%= link_to "+", "upload", class: "btn btn-primary ml-3" %>
  </div>

  <div class="gallery mt-3">
    <% if @client.photos.any? %>
      <% @client.photos.each do |photo| %>
        <div class="gallery-card">
          <%= link_to cl_image_tag(photo.key, class: "gallery-img"), photo %>
          <div class="card-body">
            <p><%=(photo.created_at + 7200).strftime('%d/%m/%y %H:%M') %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
