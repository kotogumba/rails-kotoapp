
<div class="container mb-3">
  <%= form_with url: clients_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Пошук пацієнта" %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>


<div class= "container">
  <div>
    <ol>
    <% @clients.each do |client| %>

      <li><a href="/clients/<%=client.id%>" style="text-decoration: none"> <p> <%= "#{client.first_name} #{client.last_name}"%> </p> </a></li>
    <% end %>
  </div>
  </div>
<div class="container">
  <%= link_to "Новий паціент", new_client_path, class: "btn btn-primary" %>
  <%= link_to "Назад", root_path, class: "btn btn-primary" %>

</div>
