<div class="container">
  <h2 class="border-bottom"><%= @client.first_name %> <%= @client.last_name %></h2>
  <div class="container border">
    <div class="row">
      <div class="col border">

        <div class="container">
          <div class="row row-cols-auto">
            <% if @client.photos.any? %>
              <% @client.photos.first(3).each do |photo| %>
                <div class="col">
                  <div class="d-flex flex-column justify-content-center align-items-center mb-3" style="background-color:white;">
                    <%= link_to cl_image_tag(photo.key, width: 180, crop: :fill), photo %>
                    <div class="card-body">
                      <p class="card-text"><%= (photo.created_at + 7200).strftime('%d/%m/%y %H:%M') %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="d-flex flex-row mb-3 ">
          <%= link_to "Усі фото", "#{@client.id}/client_photos", class: "btn btn-primary me-1", style: "width: 100px;"%>
          <%= link_to "Додати процедуру",  new_service_path(client_id: @client.id), class: "btn btn-warning" %>
          <%= link_to "Видалити", client_path(@client), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
            }, class: "btn btn-danger ms-1" %>
        </div>
      </div>

      <div class="col border">
        <h5> Процедури: </h5>
        <div class="overflow-auto border p-2 mb-3 bg-white rounded" style="height: 200px; width: 400px">
          <% @client.services.all.reverse.each_with_index do |service, index| %>
            <a href="/services/<%=service.id%>"><p><%= "#{index + 1} - #{(service.created_at + 7200).strftime('%d/%m/%y %H:%M')} - #{service.medicine.title}" %></p></a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>





<div class="container">

  <%= link_to "Змінити", edit_client_path(@client), class: "btn btn-primary" %>
  <%= link_to "Видалити", client_path(@client), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-primary"%>
  <%= link_to "Додати фото", "#{@client.id}/upload", class: "btn btn-primary" %>
  <%= link_to "Назад", clients_path, class: "btn btn-primary" %>
</div>
