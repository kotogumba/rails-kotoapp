<%= simple_form_for [@zone] do |f| %>
  <%= f.input :title, label: "Назва" %>
  <%= f.input :description, label: "Опис" %>
  <%= f.input :medicines, label: "Препарат",:collection => Medicine.all.map{|u| [u.title, u.id]} %>
  <%# add medicines %>
  <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
  <%= f.button :submit, value: "Підтвердити", class: "btn btn-primary" %>
<% end %>
