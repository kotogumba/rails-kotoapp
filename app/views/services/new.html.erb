<%= simple_form_for [@service] do |f| %>
  <%# choose from doctors in input  %>
  <%= f.input :doctor_id, :collection => Doctor.all.map{|u| [u.first_name + ' ' + u.last_name, u.id]} %>

  <%# @client_id as default value in input%>
  <% if @client_id %>
    <%= f.input :client_id, :as => :hidden, :input_html => { :value => @client_id } %>
  <% else %>
    <%= f.input :client_id, :collection => Client.all.map{|u| [u.first_name + ' ' + u.last_name, u.id]} %>
  <% end %>

  <%=  f.input :medicine_id, :collection => Medicine.all.map{|u| [u.title, u.id]} %>
  <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
  <%= f.button :submit %>
<% end %>
